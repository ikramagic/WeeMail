<div class="container">
  <%= turbo_frame_tag 'email-list' do %>
    <%= form_with(model: Email.new, local: true) do |form| %>
      <div class="actions">
        <%= form.submit "Recevoir un email" %>
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <h2>Liste des e-mails</h2>
      <%= turbo_frame_tag 'email-list' do %>
        <ul>
          <% @emails.each do |email| %>
            <li>
            <%= link_to email.object, email_path(email), remote: true, data: { turbo_frame: "selected-email", action: "replace" } %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="col-md-6">
      <%= turbo_frame_tag 'selected-email' do %>
        <%= render 'email' %>
      </div>
    </div>
  </div>
  <% end %>
</div>