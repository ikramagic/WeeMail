<div class="container">

<div class="toast show text-center mx-auto mt-5" role="alert" aria-live="assertive" aria-atomic="true">
<div class="toast-header">
  <strong class="me-auto">WeeMail & AbblePay</strong>
  <small>11 mins ago</small>
  <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
    <span aria-hidden="true"></span>
  </button>
</div>
<div class="toast-body">
Blease bay for our premium sus' cription if you don't want bugs!</div>
</div>

  <%= turbo_frame_tag 'email-list' do %>
    <%= form_with(model: Email.new, local: true) do |form| %>
      <div class="card mt-3">
        <div class="card-body text-center">
          <%= form.submit "Recevoir un email", class: "btn btn-primary" %>
          
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 85%;"></div>
</div>
<br>
  <div class="row mt-3">
    <div class="col-md-6">
      <div class="card text-white bg-primary mb-3">
        <div class="card-body">
          <h2 class="card-title">Liste des e-mails</h2>
          <%= turbo_frame_tag 'email-list' do %>
            <ul class="list-group">
              <% @emails.each do |email| %>
                <li class="list-group-item">
                <%= link_to email.object, email_path(email.id), remote: true, data: { turbo_frame: "selected-email", action: "replace" }, class: "btn btn-primary" %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card text-white bg-primary mb-3">
        <div class="card-body">
          <%= turbo_frame_tag 'selected-email' do %>
            <%= render 'email' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>